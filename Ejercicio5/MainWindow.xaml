<Window x:Class="Ejercicio5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Contenedor WrapPanel para los botones -->
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Botón para el evento Click -->
            <Button Content="Click Event" Width="150" Height="50" Margin="10"
                    Click="OnClickEvent"/>
            <!-- Botón para el evento MouseEnter -->
            <Button Content="Mouse Enter" Width="150" Height="50" Margin="10"
                    MouseEnter="OnMouseEnter"/>
            <!-- Botón para el evento de clic derecho -->
            <Button Content="Right Click Event" Width="150" Height="50" Margin="10"
                    PreviewMouseRightButtonDown="OnRightClickEvent"/>
        </WrapPanel>
    </Grid>
</Window>
